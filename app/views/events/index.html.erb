<%= render "layouts/admin_menu" %>

<div id="conteneur_intermediaire_right">
  <div class="article">
    <h1>Liste des évènements</h1>
    <br/>
    <table border = 1>
      <thead>
        <tr>
          <th>Titre</th>
          <th>Date début</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.beginAt %></td>
            <td><%= link_to 'Afficher', event %></td>
            <td><%= link_to 'Editer', edit_event_path(event) %></td>
            <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br/>
    <%= link_to 'Ajouter un nouvel évènement', new_event_path %> 
  </div>
</div>

