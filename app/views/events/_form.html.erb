<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :'Titre' %><br>
    <%= f.text_field :title, :maxlength=>"30" %>
  </div>
  <div class="field">
    <%= f.label :'Description de l\'évènement' %><br>
    <%= f.text_area :text, :maxlength=>"254", :size=>"50x6" %>
  </div>
  <div class="field">
    <%= f.label :'Date début de l\'évènement' %><br>
    <%= f.datetime_select :beginAt %>
  </div>
  <div class="field">
    <%= f.label :'Image - URL' %><br>
    <%= f.text_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
