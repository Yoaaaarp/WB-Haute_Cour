<%= render "layouts/admin_menu" %>

<!--<p id="notice"><%= notice %></p>-->

<div id="conteneur_intermediaire_right">
  <div class="article">
    <h2>Liste des commandes </h2>
    <br/>
    <br/>
    <table border="1">
          <thead>
            <tr>
                <th>Id</th>
                <th>Prix total</th>
                <th>Status</th>
                <th colspan="3"></th>
            </tr>
          </thead>
      <tbody>
          <% @orders.each do |order| %>
              <tr>
                <td><%= order.id %></td>
                <td><%= '%.2f' %(order.total_price) %> CHF</td>
                <td><%= order.status.name %></td>
                <td><%= link_to 'Afficher détails', order %></td>
                <td><%= link_to 'Gérer', edit_order_path(order) %></td>
                <td><%= link_to 'Supprimer', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
      </table>
  </div>
</div>



